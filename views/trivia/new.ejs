    <form action="/trivia" method="POST" autocomplete="off">
      <div>
        <label>About</label>
          <select name="about">
            <option value="Eric">Eric</option>
            <option value="Inga-Liese">Inga-Liese</option>
          </select>
      </div>
      <div>
        <br>
        <label>Trivia </label>
