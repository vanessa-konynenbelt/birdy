<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <h1>Enter some advice</h1>
  <form action="/advice/<%= advice._id %>?_method=PUT" method="POST">

    <label>Advice
      <input name="advice" value="<%= advice.advice%>"></input>
    </label><br>

    <label>Years together
      <input name="years" value="<%= advice.years%>"></input>
    </label><br>

    <label>Name
      <input name="from" value="<%= advice.from%>"></input>
    </label><br>

    <button type="submit">Save Advice</button>
  </form>
</main>

