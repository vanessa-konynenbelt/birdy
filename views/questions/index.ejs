<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h2>Ask the couple a question!</h2>
	<ul>
  <% question.forEach(q => { %>
    <li><%=q.question %></li>

    <form action="/questions/<%=q._id%>/edit" method="GET">
      <button class="btn" type="submit">edit</button>
    </form>
    
    <form action="/questions/<%=q._id%>?_method=DELETE" method="POST">
      <button class="btn" type="submit">delete</button>
    </form>

  <% }) %>
  </ul>
  <a href="/questions/new">Add Question</a>
</section>

