<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<section>
  <h2>Ask the couple a question!</h2>
  <% question.forEach(q => { %>
    <p><%=q.question %></p>
    <form action="/questions/<%=q._id%>/edit" method="GET">
      <button class="btn" type="submit">edit</button>
    </form>
    <form action="/questions/<%=q._id%>?_method=DELETE" method="POST">
      <button class="btn" type="submit">delete</button>
    </form>

  <% }) %>
  <a class = "button" href="/questions/new">Add Question</a>
</section>

